<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
    
    <LinearLayout android:padding="5dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:id="@+id/linearLayoutTrue">
        <ImageView android:id="@+id/imageView1" android:src="@drawable/icon_yes" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    	<TextView android:id="@+id/txt_sub_menu" android:textSize="30dip" android:textStyle="bold" android:textColor="@color/GREEN" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Yes! Right." android:gravity="center_vertical|center_horizontal"></TextView>
    </LinearLayout>
    <LinearLayout android:padding="5dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:id="@+id/linearLayoutFalse">
        <ImageView android:id="@+id/imageView1" android:src="@drawable/icon_false" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    	<TextView android:id="@+id/txt_sub_menu" android:textSize="30dip" android:textStyle="bold" android:textColor="@color/RED" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="No! Not right." android:gravity="center_vertical|center_horizontal"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content">
        <Button android:layout_height="wrap_content" android:text="OK" android:id="@+id/buttonOK" android:layout_width="fill_parent"></Button>
    </LinearLayout>
    
</LinearLayout>
