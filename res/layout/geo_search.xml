<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/TITLE_BACKGROUND"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/txt_sub_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/SEARCH_RESULT"
            android:textColor="@color/BLUE"
            android:textStyle="bold" >
        </TextView>

        <Button
            android:id="@+id/show_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/maps_action" />

        <TextView
            android:id="@+id/serchTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text=""
            android:textColor="@color/RED"
            android:layout_toRightOf="@id/txt_sub_menu"
            android:layout_toLeftOf="@id/show_all_button"
            android:layout_centerVertical="true"
             >
        </TextView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loadInstanceProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/BLACK"
        android:visibility="gone" >
    </ProgressBar>

    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/range_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <hust.hgbk.vtio.vinafood.customview.ChooseDistanceView
                android:id="@+id/choose_range_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e3e9ff" 
                
                />
			<Button
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/profile"
                />
            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/search_button"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/linearLayout1"
        android:layout_below="@id/relLayout2"
        android:background="@color/WHITE" >

        <ListView
            android:id="@+id/listResultView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#0000" >
        </ListView>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:text="@string/no_search_result"
        android:textSize="20sp"
        android:typeface="serif"
        android:textColor="@color/BLACK"
        android:visibility="gone"
        android:id="@+id/no_search_result_textview"
        />

</RelativeLayout>